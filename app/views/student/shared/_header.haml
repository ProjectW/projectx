.contain-to-grid.sticky
  %nav.top-bar{"data-options" => "sticky_on: large", "data-topbar" => ""}
    %ul.title-area
      %li.name
        %h1
          %a{href: "/"} pinpeg
      %li.toggle-topbar.menu-icon
        %a{href: "#"}
          %span Menu
    %section.top-bar-section
      %ul.left
        %li.has-form{style: "background-color: #FF8547;"}
          .row.collapse
            .large-9.small-10.columns
              %input{:placeholder => "Search for companies", :type => "text"}
            .large-3.small-2.columns
              %a.button.fs1{"aria-hidden" => "true", "data-icon" => "U"}
          
      %ul.right
        %li
          %a{href: "#"} Dashboard
        %li
          %a{href: "#"} Company Reviews
        %li
          - if student_account_signed_in?
            = link_to('Logout', destroy_student_account_session_path)
          - else
            = link_to('Login', new_student_account_session_path)
