= stylesheet_link_tag 'application'

%link{href: "/assets/mobile.sass", media: "screen and (max-device-width: 700px)", rel: "stylesheet"}

.row
  .medium-12
    %h1.head Login

.row
  .medium-12.medium-centered.columns.text-center
    Are you a recruiter?
    %a
      Click Here.

%br

.row
  .medium-12.columns.text-center
    = content_tag(:div, flash[:error], :id => "flash_error", :class => 'errors') if flash[:error]
    = content_tag(:div, flash[:notice], :id => "flash_notice", :class => 'errors') if flash[:notice]
    = content_tag(:div, flash[:alert], :id => "flash_alert", :class => 'errors') if flash[:alert]

%br

.row.join
  .medium-12.columns
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %div
        = f.label :email, 'Email Address'
        = f.email_field :email, autofocus: true
      %div
        = f.label :password, 'Password'
        = f.password_field :password, autocomplete: "off"

      %div
        .endLogin
          = f.submit "Login", class: 'button'
        .register
          = link_to "New? Create an account here.", new_registration_path(resource_name)
          %br
          %br
          = link_to 'Forgot password?', new_password_path(resource_name)
%br
%br
%br
