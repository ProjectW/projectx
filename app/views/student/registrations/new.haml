= stylesheet_link_tag "student/register"

.row.join
  .medium-12.medium-centered
    %h1.head Join Us

.row.join
  .signedup
    Already have an account? 
    = link_to "Login here.", new_session_path(resource_name), :class => "login"
.row.join
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    %div
      = f.label :email, 'Student Email Address (.edu)'
      = f.email_field :email, autofocus: true

    %div
      = f.label :password
      = f.password_field :password, autocomplete: "off"

    %div
      = f.label :password_confirmation, 'Confirm'
      = f.password_field :password_confirmation, autocomplete: "off"

   
    %h3
      Congrats! 
      %h5 You're almost done, we just need a little more information about you.
    
    %div.fullname
      = f.label :full_name
      = f.text_field :full_name

    %div
      = f.label :school
      = f.text_field :school # will need some work here with auto-completes + limited inputs

    %div
      = f.label :graduation_year
      = f.select :graduation_year, [2015, 2016, 2017, 2018]

    .end
      %div.button.postfix
        = f.submit "Sign Up"

