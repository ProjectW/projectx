.row
  .small-3.small-centered
    %h1 Join Us
.row
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    %div
      = f.label :email, 'Student Email Address (.edu)'
      %br
      = f.email_field :email, autofocus: true

    %div
      = f.label :password
      %br
      = f.password_field :password, autocomplete: "off"

    %div
      = f.label :password_confirmation, 'Confirm'
      %br
      = f.password_field :password_confirmation, autocomplete: "off"

    .row
      .small-3.small-centered
        %h2
          Congrats! You're almost done, we just need a little more information about you.
    
    %div
      = f.label :full_name
      %br
      = f.text_field :full_name

    %div
      = f.label :school
      %br
      = f.text_field :school # will need some work here with auto-completes + limited inputs

    %div
      = f.label :graduation_year
      %br
      = f.select :graduation_year, [2015, 2016, 2017, 2018]

    / %div
    /   = f.label :website
    /   %br
    /   = f.text_field :website

    / %div
    /   = f.label :github
    /   %br
    /   = f.text_field :github

    %div
      = f.submit "Sign Up"


  


%div
  Already have an account? 
  = link_to "Login here.", new_session_path(resource_name)
