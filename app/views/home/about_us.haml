		.contact_us
			%h1.aboutHead Contact us, we want to hear from you!
			%form{"name"  => "emailSignUp"}
				.row
					.medium-6.columns
						%input.name{"type" => "text", "name" => "name", "placeholder" => "Name"}
					.medium-6.columns
						%input.name{"type" => "email", "name" => "email", "placeholder" => "Email Address"}
				.row
					.medium-12.columns
						%input.name{"type" => "text", "name" => "subject", "placeholder" => "Subject"}
				.row
					.medium-12.columns
						%textarea.name{"type" => "text", "name" => "address", "placeholder" => "Subject", "rows" => 5}
				.row
					.medium-2.columns.sendemail
						%a.button.postfix.send{href: "#"} Send