.row
  .medium-12.columns.medium-centered
    %h1
      Contact Us

.row
  .medium-12.columns
    = form_tag '/contact', method: 'post' do
      %div
        = label_tag :email, "Your email address:"
        = email_field_tag :email, nil, autofocus: true
      %div
        = label_tag :message, "Message: "
        = text_area_tag :message, nil, placeholder: "Type your message here.", rows: 10, cols: 10
      %div
        .button
          = submit_tag 'Send'
