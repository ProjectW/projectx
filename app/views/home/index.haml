%link{href: "http://fonts.googleapis.com/css?family=Josefin+Sans", rel: "stylesheet", type: "text/css"}
%script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js", type: "text/javascript"}
= javascript_include_tag 'jquery.stellar.min'
= javascript_include_tag 'parallax.js'
= javascript_include_tag "waypoints.min"
.signIn{"data-stellar-background-ratio" => "0.5"}
	.row.firstSlide
		.medium-12.columns
			%h2.text
				Pin up companies you love, peg down your perfect fit


	%form{"name"  => "emailSignUp"}
		.row.firstSlide
			.medium-6.columns.signForm
				%input.email{"type" => "email", "name" => "email", "placeholder" => "Email Address"}
				%input.password{"type" => "password", "name" => "password", "placeholder" => "Password"}
				%a.button.postfix{href: "#"} Sign Up

.content{"data-stellar-background-ratio" => "1.5"}
	.info
		.row
			.medium-12.columns
				.infotop
					%h1
						For Students

					%ul.small-block-grid-3
						%li
							.icon.fs1{"aria-hidden" => "true", "data-icon" => "\"}
							%h4.subtitle
								Discover and connect with top start-ups.
						%li
							.icon.fs1{"aria-hidden" => "true", "data-icon" => "\"}
							%h4.subtitle
								Talk to past interns and review company data.
						%li
							.icon.fs1{"aria-hidden" => "true", "data-icon" => "\"}
							%h4.subtitle
								Choose and prepare for your best fit. 
				%h2.sub
					Take a moment. 
					Learn more about different internships.

