%link{href: "http://fonts.googleapis.com/css?family=Josefin+Sans", rel: "stylesheet", type: "text/css"}

.contain-to-grid.sticky
	%nav.top-bar{"data-options" => "sticky_on: large", "data-topbar" => ""}
		%ul.title-area
			%li.name
				%h1
					%a{href: "#"} QLytic
			%li.toggle-topbar.menu-icon
				%a{href: "#"}
					%span Menu
		%section.top-bar-section
			%ul.right
				%li
					%a{href: "#"} How It Works
				%li
					%a{href: "#"} For Companies
				%li
					%a{href: "#"} Login

.signIn
	%form{"name"  => "emailSignUp"}
		.input
			.row
				.medium-5.columns
					%input.email{"type" => "email", "name" => "email", "placeholder" => "Email Address"}
				.medium-5.columns
					%input.password{"type" => "password", "name" => "password", "placeholder" => "Password"}
	
.content
	%h1
		For Students
	%ul.small-block-grid-3
		%li
			= image_tag('discover.png', class: "icon")
			%h4
				Discover and connect with top start-ups.
		%li
			= image_tag('connect.png', class: "icon")
			%h4
				Talk to past interns and review company data.
		%li
			= image_tag('fit.png', class: "icon")
			%h4
				Choose and prepare for your best fit. 
.footer
	%ul.small-block-grid-1
		%li 2014 QLytic, All Rights Reserved.
		%li
			%a{href: "#"} About Us
		%li
			%a{href: "#"} For Students
		%li
			%a{href: "#"} For Companies
		%li
			%a{href: "#"} Terms of Use
		%li
			%a{href: "#"} Privacy Policy
	.row
	.small-8.large-4.columns 
		%ul.small-block-grid-4
			%li Contact Us
			%li
				= image_tag('connect.png', class: "icon")
			%li
				= image_tag('connect.png', class: "icon")
			%li
				= image_tag('connect.png', class: "icon")

