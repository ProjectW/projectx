.row
  .medium-12.columns
    %h1
      %a{ 'ng-href' => '{{ company.url }}', 'target' => '_blank' }
        {{ company.name }}
    .slider
      %div.slide{ 'ng-repeat' => 'review in reviews', 'ng-show'=> 'review.id == reviews[currentIndex].id' }
        {{ review.student.name }}
        {{ review.student.school }}
        {{ review.student.graduationYear }}
      %div.arrows{ 'ng-show' => 'reviews.length > 1' }
        %img{:src => "/images/left-arrow.png", 'ng-click' => 'prev()' }
        %img.right{:src => "/images/right-arrow.png", 'ng-click' => 'next()' }
