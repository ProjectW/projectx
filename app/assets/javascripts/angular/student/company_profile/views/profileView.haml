
= javascript_include_tag 'jquery.stellar.min'

:javascript
  $(document).ready(function(){
    if(!Modernizr.touch){
      $.stellar();
    }
  });

#company{"data-stellar-background-ratio" => "0.5"}
  %div{"data-stellar-background-ratio" => "1.5" }

.company
#wrapper{"data-stellar-background-ratio" => "1.0"}
  .col
    .row
      .medium-6.columns.left-column
        %h1
          {{ company.name }}
        %h3
          New York City, NY, United States
        %h4
          Type: Architecture
        %h4
          Founded: 2009
        %h4
          Founded: Series A
