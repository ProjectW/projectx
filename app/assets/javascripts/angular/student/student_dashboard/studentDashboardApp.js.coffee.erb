studentDashboardApp = angular.module 'studentDashboardApp',
  [
    'ngRoute',
    'studentDashboardControllers',
    'resources.resumes',
    'resources.reviews',
    'resources.account'
  ]

studentDashboardApp.config ["$httpProvider", ($httpProvider) ->
  $httpProvider.defaults.headers.common['X-CSRF-Token'] = $('meta[name=csrf-token]').attr('content')
]

studentDashboardApp.config ['$routeProvider', ($routeProvider) ->
  $routeProvider
    .when('/',
      templateUrl: '<%= asset_path("angular/student/student_dashboard/views/dashboardView") %>',
      controller: 'DashboardCtrl'
    )
    .when('/review',
      templateUrl: '<%= asset_path("angular/student/student_dashboard/views/reviewView") %>',
      controller: 'ReviewCtrl'
    )
    .when('/edit'
      templateUrl: '<%= asset_path("angular/student/student_dashboard/views/editView") %>',
      controller: 'EditCtrl'
    )
]
