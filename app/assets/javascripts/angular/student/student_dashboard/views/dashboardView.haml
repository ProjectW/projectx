.profile
  .row
    .medium-4.columns
      .profpic
        %ul.small-block-grid-2{style: "background-color: #fff"}
          %li
            = image_tag('profile.png', class: "profilepic")
          %li.profileinfo{style: "padding-top: 25px !important"}
            Lisa Wang
            %br
            Harvard
            %br
            Class of 2016
          %a.button.expand.sd{:href => "#"} Edit
          %ul.small-block-grid-4{style: "background-color: #f5f4f4; padding-left: 25px;"}
            %li
              .connect.fs1{"aria-hidden" => "true", "data-icon" => "\"}
            %li
              .connect.fs1{"aria-hidden" => "true", "data-icon" => "\"}
            %li
              .connect.fs1{"aria-hidden" => "true", "data-icon" => "\", style: "padding-top: 8px"}
            %li
              %a.button.expand.sd.edit{:href => "#"} Edit
      .companies
        %ul.small-block-grid-1{style: "background-color: #fff"}
          %h6 Recently Viewed Companies

    .medium-8.columns
      .resumes
        %h6 My Resumes
        %ul.small-block-grid-3{ style: "background-color: #fff" }
          %li{ 'ng-repeat' => 'resume in resumes | orderBy:orderProp' }
            {{ resume.uploadFileName }}:
        %a.button.expand.sd{:href => "resumes/new"} + Upload a New Resume
      .reviews
        %h6 My Reviews
        %ul.small-block-grid-2{ style: "background-color: #fff" }
          %li{ 'ng-repeat' => 'review in reviews' }
            {{ review.name }}
            %img.company{ 'ng-src' => 'company.png' }
          %li
            .options
              %input#checkbox1{:type => "checkbox"}
                %label{:for => "checkbox1"} Students can email me about this company
              %a.button.expand.sd.edit{:href => "#"} View/Edit Review
          %a.button.expand.sd{:href => "#"} + Add a New Review

          %a.button.expand.more{:href => "#"} View All Companies Reviews